{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "title": "World",
  "description": "A world object",
  "type": "object",
  "properties":
  {
    "i_name":{
      "description": "Internal Name",
      "type":"string"
    },
    "d_name":{
      "description":"Display Name",
      "type": "string"
    },
    "descriptions":{
      "description":"a list of descriptions",
      "type": "array",
      "items": {
        "type":"object"
      },
      "minItems":1,
      "uniqueItems": true
    },
    "flags":{
      "description": "starting flags for the object",
      "type":"array",
      "items":{
        "type":"string"
      }
    },
    "aliases":{
      "type":"array",
      "items":{
        "type":"string"
      },
      "uniqueItems": true
    },
    "conditions":{
      "type": "object",
      "properties":{
        "usable":{
          "type": "array",
          "items":{
            "type":"string"
          }
        },
        "visible":{
          "type": "array",
          "items":{
            "type": "string"
          }
        }
      }
    }
  },
  "required":["i_name", "d_name", "descriptions", "flags", "conditions", "aliases"]  
}
