{
  "$schema":"http://json-schema.org/draft-04/schema#",
  "title": "World",
  "description": "A world object",
  "type": "object",
  "properties":
  {
    "i_name":{
      "description": "Internal Name",
      "type":"string"
    },
    "d_name":{
      "description":"Display Name",
      "type": "string"
    },
    "descriptions":{
      "description":"a list of descriptions",
      "type": "array",
      "items": {
        "type":"object"
      },
      "minItems":1,
      "uniqueItems": true
    },
    "flags":{
      "description": "starting flags for the object",
      "type":"array",
      "items":{
        "type":"string"
      }
    },
    "aliases":{
      "type":"array",
      "items":{
        "type":"string"
      },
      "uniqueItems": true
    },
    "exits":{
      "type":"array",
      "items":{
        "type":"object",
        "properties":{
          "exit":{
            "type":"string",
            "description": "the exit object type this exit is"
          },
          "room":{
            "type":"string",
            "description":"the room this exit leads to"
          }
        }
      }
    },
    "actors":{
      "type":"array",
      "items":{
        "type":"string"
      }
    },
    "items":{
      "type":"array",
      "items":{
        "type":"string"
      }
    }
  },
  "required":["i_name", "d_name", "actors", "items", "exits", "descriptions", "flags", "aliases"]
  
}
